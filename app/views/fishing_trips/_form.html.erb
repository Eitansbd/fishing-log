<%= form_for(@fishing_trip) do |f| %>
<%= render('shared/error_messages', record: @fishing_trip) %>
  <div class="row equal">
    <div class="col-md-4">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: " is-valid form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :weather %>
      <%= f.text_field :weather, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :body_of_water %>
      <%= f.text_field :body_of_water, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :location %>
      <%= f.text_field :location, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :date %>
      <%= f.date_field :date, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :start_time %>
      <%= f.time_field :start_time, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.label :end_time %>
      <%= f.time_field :end_time, class: "form-control form-control-sm" %>
      </div>
    </div>
    <div class="col-md-8">
      <%= f.text_area :content, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <%= f.submit yield(:button_text), class: "btn btn-primary pull-right" %>
  </div>
<% end %>