<div class="page-header fishing-trip-header">
  <% if current_user? @fishing_trip.user %>
    <div class="btn-group pull-right">
    <%= link_to edit_fishing_trip_path(@fishing_trip), class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit
    <% end %>
    <%= link_to(fishing_trip_path(@fishing_trip), method: :delete,
                          data: { confirm: "Are you sure you want to delete?" },
                          class: "btn btn-default") do %>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
    <% end %>
    </div>
  <% end %>
  
  <div class="row">
    <div class="col-md-5 col-md-offset-4">
      <div class="media text-center">
        <div class="media-right media-middle">
          <%= link_to image_tag(@fishing_trip.user.profile_image.url(:square_md), class: "media-object img-circle"),user_path(@fishing_trip.user) %>
        </div>
        <div class="media-body">
          <h1 class="media-heading"><%= @fishing_trip.title %></h1>
          <p>Angler: <%= @fishing_trip.user.name %></p>
          <p>Posted <%= time_ago_in_words(@fishing_trip.created_at) %> ago.</p>
        </div>
      </div>
    </div>
  </div>
  
  <% if current_user? @fishing_trip.user %>
    <button type="button" id="add-fish-catch" class="btn btn-default btn-align-bottom">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Fish
    </button>
  <% end %>
</div>

<% if current_user? @fishing_trip.user %>
  <div class="row bottom-buffer-sm">
    <div class="col-md-12" id="fish-catch-form" style="display: none;">
      <%= render 'fish_catches/form' %>
    </div>
  </div>
<% end %>